<h1>Productos</h1>
<br/>
    <hr/>
    <button onclick="createCart()" id="newCart">Crear tu carrito de compras</button>
    <div id="cartDetails" style="display: none;">
        Id del carrito:
        <span id="cartDiv"></span>
        <a id="cartLink" href=""></a>
    </div>

{{#if totalDocs}}
    <div>
        <div>
        {{#each payload}}
        <ul>
            <li>{{this.title}}</li>
            <li>Precio: ${{this.price}}</li>
        </ul>
            <div>
                <button onclick="addToCart(`{{this._id}}`)">Agregar</button>
            </div>
            <hr>
        {{/each}}
        </div>
    </div>
    <div>
        {{#if hasPrevPage}}
            <a href={{prevLink}}>Anterior</a>
        {{/if}}

        {{page}}

        {{#if hasNextPage}}
            <a href={{nextLink}}>Siguiente</a>
        {{/if}}
    </div>
{{else}}
    <p>no hay productos</p>
{{/if}}

<script src="js/products.js"></script>